{
  "name": "bun-polyfills-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "clean": "rm -rf packages/*/dist",
    "coverage": "bun run --cwd packages/api-tracker report",
    "coverage:check": "bun run --cwd packages/api-tracker check",
    "coverage:badge": "bun run --cwd packages/api-tracker badge"
  },
  "catalog": {
    "@types/bun": "^1.3.4",
    "@types/node": "^22.15.32",
    "typescript": "^5.8.3",
    "zx": "^8.6.0"
  },
  "packageManager": "bun@1.3.4"
}
