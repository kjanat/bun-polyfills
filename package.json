{
  "name": "bun-polyfills-monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/bun-polyfills.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.3.4",
  "scripts": {
    "build": "bun run --filter '*' build",
    "clean": "bun run --filter '*' clean",
    "coverage": "bun run --filter @kjanat/bun-api-tracker report",
    "coverage:badge": "bun run --filter @kjanat/bun-api-tracker badge",
    "coverage:check": "bun run --filter @kjanat/bun-api-tracker check",
    "fmt": "prettier . --write",
    "lint": "bun run --filter '*' lint",
    "postinstall": "simple-git-hooks",
    "test": "AGENT=1 bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "@kjanat/prettier-config": "^1.1.0",
    "@prettier/plugin-xml": "^3.4.2",
    "prettier": "^3.7.4",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-nginx": "^1.0.3",
    "prettier-plugin-pkg": "^0.21.2",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prettier-plugin-toml": "^2.0.6",
    "pretty-quick": "^4.2.2",
    "simple-git-hooks": "^2.13.1"
  },
  "catalog": {
    "@types/bun": "~1.3",
    "@types/node": "^22",
    "@typescript/native-preview": "latest",
    "typescript": "~5.8",
    "zx": "~8.6",
    "prettier": "latest",
    "@kjanat/prettier-config": "latest"
  },
  "catalogs": {
    "test": {
      "string-width": "^8.1.0",
      "strip-ansi": "^7.1.2"
    },
    "lint": {
      "@biomejs/biome": "2.3.8"
    }
  },
  "prettier": "@kjanat/prettier-config",
  "simple-git-hooks": {
    "pre-commit": "bun run pretty-quick --staged && bun run coverage && git add packages/api-tracker/output/",
    "pre-push": "bun run test && bun run typecheck"
  }
}
