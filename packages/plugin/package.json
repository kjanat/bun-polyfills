{
  "name": "@kjanat/bun-polyfills-plugin",
  "version": "0.1.0",
  "type": "module",
  "description": "Bun build plugin for conditional polyfill inclusion",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/bun-polyfills.git",
    "directory": "packages/plugin"
  },
  "homepage": "https://github.com/kjanat/bun-polyfills#readme",
  "bugs": {
    "url": "https://github.com/kjanat/bun-polyfills/issues"
  },
  "author": "Kaj Kowalski",
  "license": "GPL-3.0-only",
  "packageManager": "bun@1.3.4",
  "engines": {
    "bun": ">=1.3.4"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "bun",
    "plugin",
    "polyfill",
    "build"
  ],
  "scripts": {
    "build": "bun run build:bun && bun run build:tsc",
    "build:bun": "bun build ./src/index.ts --outdir dist --target bun",
    "build:tsc": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "fmt": "cd ../../ && bun run prettier ./packages/plugin/ --write",
    "lint": "biome check --write",
    "lint:package": "bunx publint",
    "typecheck": "tsgo --noEmit"
  },
  "peerDependencies": {
    "@types/bun": "catalog:"
  },
  "dependencies": {
    "@kjanat/bun-polyfills": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:lint",
    "@types/bun": "catalog:",
    "@typescript/native-preview": "catalog:",
    "typescript": "catalog:"
  }
}
