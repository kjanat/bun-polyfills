{
  "name": "@kjanat/bun-api-tracker",
  "version": "0.1.0",
  "type": "module",
  "description": "Automated Bun API detection and coverage tracking for bun-polyfills",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/bun-polyfills.git",
    "directory": "packages/api-tracker"
  },
  "homepage": "https://github.com/kjanat/bun-polyfills#readme",
  "bugs": {
    "url": "https://github.com/kjanat/bun-polyfills/issues"
  },
  "author": "Kaj Kowalski <dev@kajkowalski.nl> (https://github.com/kjanat)",
  "license": "GPL-3.0-only",
  "packageManager": "bun@1.3.4",
  "engines": {
    "bun": ">=1.3.4"
  },
  "bin": {
    "bun-api-tracker": "./dist/cli.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./types": "./dist/types.mjs",
    "./package.json": "./package.json"
  },
  "files": [
    "data",
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "bun",
    "api",
    "tracker",
    "coverage",
    "polyfill"
  ],
  "scripts": {
    "badge": "bun run src/cli.ts badge",
    "build": "tsdown",
    "build:bun": "bun build ./src/index.ts ./src/cli.ts ./src/types.ts --outdir dist --target node",
    "build:legacy": "bun build:bun && bun build:tsc",
    "build:tsc": "tsc --emitDeclarationOnly",
    "check": "bun run src/cli.ts check",
    "clean": "rm -rf dist output tests/file tests/spawn tests/shell tests/util tests/glob",
    "compare": "bun run src/cli.ts compare",
    "fmt": "DIR=\"${PWD}\"; cd \"$(git rev-parse --show-toplevel)\" && bun run prettier \"${PWD}\" --write",
    "lint": "biome check --write",
    "lint:package": "bunx publint",
    "report": "bun run src/cli.ts report",
    "sync-tests": "bun run src/cli.ts sync-tests",
    "sync-tests:dry": "bun run src/cli.ts sync-tests --dry-run",
    "test": "bun test",
    "typecheck": "tsgo --noEmit"
  },
  "peerDependencies": {
    "@types/bun": "catalog:"
  },
  "dependencies": {
    "@kjanat/bun-polyfills": "workspace:*",
    "typescript": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:lint",
    "@kjanat/bun-polyfills-tsconfig": "workspace:*",
    "@types/bun": "catalog:",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "react": "^19.2.1",
    "string-width": "catalog:test",
    "strip-ansi": "catalog:test",
    "tsdown": "catalog:bundler"
  }
}
