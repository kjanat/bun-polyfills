{
  "name": "@kjanat/bun-polyfills",
  "version": "0.1.0",
  "type": "module",
  "description": "Polyfills for Bun APIs to run on Node.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjanat/bun-polyfills.git",
    "directory": "packages/polyfills"
  },
  "homepage": "https://github.com/kjanat/bun-polyfills#readme",
  "bugs": {
    "url": "https://github.com/kjanat/bun-polyfills/issues"
  },
  "author": "Kaj Kowalski <dev@kajkowalski.nl> (https://github.com/kjanat)",
  "license": "GPL-3.0-only",
  "packageManager": "bun@1.3.4",
  "engines": {
    "node": ">=22"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./compression": "./dist/compression.mjs",
    "./crypto": "./dist/crypto.mjs",
    "./env": "./dist/env.mjs",
    "./file": "./dist/file.mjs",
    "./glob": "./dist/glob.mjs",
    "./modules": "./dist/modules.mjs",
    "./process": "./dist/process.mjs",
    "./shell": "./dist/shell.mjs",
    "./spawn": "./dist/spawn.mjs",
    "./toml": "./dist/toml.mjs",
    "./types": "./dist/types.mjs",
    "./utils": "./dist/utils.mjs",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "bun",
    "polyfill",
    "node",
    "compatibility",
    "shim"
  ],
  "scripts": {
    "build": "tsdown",
    "build:bun": "bun build ./src/index.ts ./src/env.ts ./src/file.ts ./src/shell.ts ./src/spawn.ts ./src/modules.ts ./src/types.ts --outdir dist --target node",
    "build:legacy": "bun run build:bun && bun run build:tsc",
    "build:tsc": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "fmt": "DIR=\"${PWD}\"; cd \"$(git rev-parse --show-toplevel)\" && bun run prettier \"${PWD}\" --write",
    "lint": "biome check --write",
    "lint:package": "bunx publint",
    "test": "bun test",
    "typecheck": "tsgo --noEmit"
  },
  "peerDependencies": {
    "@types/bun": "catalog:"
  },
  "peerDependenciesMeta": {
    "@types/bun": {
      "optional": true
    }
  },
  "dependencies": {
    "minimatch": "^10.1.1",
    "smol-toml": "^1.5.2",
    "tinyglobby": "^0.2.15",
    "zx": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:lint",
    "@kjanat/bun-polyfills-tsconfig": "workspace:*",
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "tsdown": "catalog:bundler",
    "typescript": "catalog:"
  }
}
