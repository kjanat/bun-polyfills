{
  "name": "@kjanat/bun-polyfills",
  "version": "0.1.0",
  "type": "module",
  "description": "Polyfills for Bun APIs to run on Node.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjanat/bun-polyfills.git",
    "directory": "packages/polyfills"
  },
  "homepage": "https://github.com/kjanat/bun-polyfills#readme",
  "bugs": {
    "url": "https://github.com/kjanat/bun-polyfills/issues"
  },
  "author": "Kaj Kowalski",
  "license": "GPL-3.0-only",
  "packageManager": "bun@1.3.4",
  "engines": {
    "node": ">=22"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./env": {
      "types": "./dist/env.d.ts",
      "import": "./dist/env.js"
    },
    "./file": {
      "types": "./dist/file.d.ts",
      "import": "./dist/file.js"
    },
    "./shell": {
      "types": "./dist/shell.d.ts",
      "import": "./dist/shell.js"
    },
    "./spawn": {
      "types": "./dist/spawn.d.ts",
      "import": "./dist/spawn.js"
    },
    "./modules": {
      "types": "./dist/modules.d.ts",
      "import": "./dist/modules.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "bun",
    "polyfill",
    "node",
    "compatibility",
    "shim"
  ],
  "scripts": {
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "bun build ./src/index.ts ./src/env.ts ./src/file.ts ./src/shell.ts ./src/spawn.ts ./src/modules.ts ./src/types.ts --outdir dist --target node",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@types/bun": "catalog:"
  },
  "peerDependenciesMeta": {
    "@types/bun": {
      "optional": true
    }
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "minimatch": "^10.1.1",
    "smol-toml": "^1.5.2",
    "zx": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  }
}
